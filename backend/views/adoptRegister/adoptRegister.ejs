<script>
    function submit_adopt() {
        form_ajax();
        //localStorage.clear();
    }
    function form_ajax() {
        var form = $('#form-adoptRegister')[0];
        var formData = new FormData(form);
        $.ajax({
            url: '/adoptRegister/action/addAdopt',
            type: 'POST',
            enctype: 'multipart/form-data',
            data: formData,
            dataType: 'json',
            processData: false,
            contentType: false,
            success: function (data) {
                alert("정상적으로 등록이 되었습니다.");
                window.location.href = "/";
            }
        })
    }
    /*
        도로명 주소 입력받는 함수.(daum api)
    */
    function getPosition() {
        new daum.Postcode({
            oncomplete: function (data) {
                document.getElementById("adopterAddress").value = data.roadAddress; // 도로명 주소 입력.
            }
        }).open();
    }
</script>

