<div class="row" style="margin-top:20px;">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card mb-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6"></div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">검색</span>
                        </div>
                        <input type="text" class="form-control" placeholder="search..." aria-label="Username" aria-describedby="basic-addon1" id="volunteer_search">
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="adopt_applyList" style="margin-top:20px">
                        <table class="table table-bordered table-hover display" id="adopt_waitTable">
                            <thead>
                                <tr>
                                    <th scope="col">신청번호</th>
                                    <th scope="col">유기견 이름</th>
                                    <th scope="col">입양신청날짜</th>
                                    <th scope="col">입양신청자 이름</th>
                                    <th scope="col">핸드폰 번호</th>
                                    <th scope="col">이메일</th>
                                    <th scope="col">입양신청서 보기</th>
                                    <th scope="col" style="width: 10%;">허가/거부</th>
                                </tr>
                            </thead>
                            <tbody id="adopt_waiting">
                            </tbody>
                        </table>
                    </div>
                    <div class="ui segment tab-pane fade" id="adopt_permittedList" style="margin-top:20px">
                        <table class="table table-bordered table-hover display">
                            <thead>
                                <tr>
                                    <th scope="col">신청번호</th>
                                    <th scope="col">허가날짜</th>
                                    <th scope="col">유기견 이름</th>
                                    <th scope="col">입양신청날짜</th>
                                    <th scope="col">입양자 이름</th>
                                    <th scope="col">핸드폰 번호</th>
                                    <th scope="col">이메일</th>
                                </tr>
                            </thead>
                            <tbody id="adopt_permit">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function getAdoptList() {
        $.ajax({
            url: "/erp/adopt/json/getAdoptList",
            method: "POST",
            data: {},
            success: function (data) {
                $('#adopt_waiting').html('');
                $.each(data.adopt, function (idx, adopt) {
                    $('#adopt_waiting').append(
                        "<tr><th>" + adopt.idx + "</th><td>" + adopt.name + "</td><td>" + formatDate(adopt.datetime, DATE) + "</td><td>" +
                        adopt.user_name + "</td><td>" + adopt.phone_number + "</td><td>" + adopt.user_email +
                        "</td><td>" +
                        "<button class='btn btn-info info-button'>신청서 보기</button>" +
                        "</td><td>" +
                        "<button class='permit-button btn btn-default btn' style='color:green;'><i class='fa fa-check' style='font-size:24px'></i></button>" +
                        "<button class='reject-button btn btn-default btn' style='color:red;'><i class='fa fa-remove' style='font-size:24px'></i></button>" +
                        "</td>"
                    )
                });
            }
        });
    }
    $(document).ready(function () {
        getAdoptList();
    });

    function getPermitAdoptList() {
        //table 표시
        $.ajax({
            url: "/erp/adopt/json/getPermitAdoptList",
            method: "POST",
            data: {},
            success: function (data) {
                $('#adopt_permit').html('');
                $.each(data.adopt, function (idx, adopt) {
                    $('#adopt_permit').append(
                        "<tr><th>" + adopt.idx + "</th><td>" + adopt.name + "</td><td>" + formatDate(adopt.datetime, DATE) + "</td><td>" +
                        adopt.user_name + "</td><td>" + adopt.phone_number + "</td><td>" + adopt.user_email +
                        "</td><td>" + "<button class='btn btn-info info-button'>신청서 보기</button>"
                    )
                });
            }
        });
    }
    $(document).ready(function () {
        getPermitAdoptList();
    });

    function permitAdopt(idx) {
        $.ajax({
            url: "/erp/adopt/action/permitAdopt",
            method: "POST",
            data: { idx: idx },
            success: function (data) {
                alert("승인 되었습니다.");
            }
        })
    }
    $(document).on('click', '.permit-button', function (e) {
        var idx = $(this).closest('tr').find('th').html();
        permitAdopt(idx);
    });

    function rejectAdopt(idx) {
        $.ajax({
            url: "/erp/adopt/action/rejectAdopt",
            method: "POST",
            data: { idx: idx },
            success: function (data) {
                alert("거절 되었습니다.");
            }
        })
    }
    $(document).on('click', '.permit-button', function (e) {
        var idx = $(this).closest('tr').find('th').html();
        rejectAdopt(idx);
    });

    function getAdoptInfo(idx) {
        //새창 띄워주기
    }
</script>