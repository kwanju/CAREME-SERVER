<script>
    function getScheduleListPermitted() {
        $.ajax({
            url: "/erp/volunteer/json/getScheduleListPermitted",
            method: "POST",
            data: {},
            success: function (data) {
                /*data = {
                    "result": 1,
                    "list": [
                        {
                            "idx": 1,
                            "date": "2019-04-01T00:00:00.000Z",
                            "apply_datetime": null,
                            "animal_idx": 60,
                            "animalName": "삐삐",
                            "species_code": 3,
                            "userNickName": "admin",
                            "userPhoneNumber": "01012345678",
                            "userEmail": "test@test.com"
                        },
                        {
                            "idx": 2,
                            "date": "2019-05-16T00:00:00.000Z",
                            "apply_datetime": null,
                            "animal_idx": 60,
                            "animalName": "삐삐",
                            "species_code": 3,
                            "userNickName": "admin",
                            "userPhoneNumber": "01012345678",
                            "userEmail": "test@test.com"
                        },
                    ]
                }*/
                $('#permit').html('');
                $.each(data.list, function (idx, list) {
                    $('#permit').append("<tr><th>" + list.idx + "</th><td>" + formatDate(list.date, DATE) + "</th><td>" + formatDate(list.apply_datetime, DATETIME) + "</td><td>" +
                        list.animal_idx + "</td><td>" + list.animalName + "</td><td>" + list.species_code + "</td><td>" + list.userNickName +
                        "</td><td>" + list.userPhoneNumber + "</td><td>" + list.userEmail + "</td>"
                    )
                })
                var dataTable = $('#permitTable').DataTable(
                    {
                        "searching": true,
                        "language": {
                            "lengthMenu": "_MENU_개씩 보기",
                            "zeroRecords": "Nothing found - sorry",
                            "info": " _PAGES_ 페이지 중 _PAGE_ 페이지",
                            "infoEmpty": "No records available",
                            "infoFiltered": "(filtered from _MAX_ total records)"
                        }
                    }
                );
                $('#volunteer_search').on('keyup', function () {
                    dataTable.search(this.value).draw();
                });
            }
        })
    }

    $(document).ready(function () {
        getScheduleListPermitted();
    });

    function getScheduleListWaiting() {
        $.ajax({
            url: "/erp/volunteer/json/getScheduleListWaiting",
            method: "POST",
            data: {},
            success: function (data) {
                /*data = {
                    "result": 1,
                    "list": [
                        {
                            "idx": 2,
                            "date": "2019-04-30T00:00:00.000Z",
                            "apply_datetime": null,
                            "read_state": 0,
                            "animal_idx": 60,
                            "animalName": "삐삐",
                            "species_code": 3,
                            "userNickName": "admin",
                            "userPhoneNumber": "01012345678",
                            "userEmail": "test@test.com"
                        }
                    ]
                }*/
                $('#waiting').html('');
                $.each(data.list, function (idx, list) {

                    var tr = "";
                    if (list.read_state == 0)
                        tr = "<tr class='new'>"
                    else
                        tr = "<tr>"


                    $('#waiting').append(tr + "<th>" + list.idx + "</th><td>" + formatDate(list.date, DATE) + "</th><td>" + formatDate(list.apply_datetime, DATETIME) + "</td><td>" +
                        list.read_state + "</td><td>" + list.animal_idx + "</td><td>" + list.animalName + "</td><td>" + list.species_code + "</td><td>" + list.userNickName +
                        "</td><td>" + list.userPhoneNumber + "</td><td>" + list.userEmail +
                        "</td><td><button class='permit-button btn btn-default btn' style='color:green;'><i class='fa fa-check' style='font-size:24px'></i></button>" +
                        "<button class='reject-button btn btn-default btn' style='color:red;'><i class='fa fa-remove' style='font-size:24px'></i></button></td>"
                    )
                })
                var dataTable = $('#waitTable').DataTable(
                    {
                        "searching": true,
                        "language": {
                            "lengthMenu": "_MENU_개씩 보기",
                            "zeroRecords": "Nothing found - sorry",
                            "info": " _PAGES_ 페이지 중 _PAGE_ 페이지",
                            "infoEmpty": "No records available",
                            "infoFiltered": "(filtered from _MAX_ total records)"
                        }
                    }
                );

                $('#volunteer_search').on('keyup', function () {
                    dataTable.search(this.value).draw();
                });
            }
        })
    }
    $(document).ready(function () {
        getScheduleListWaiting();
    });


    function permitSchedule(idx) {
        $.ajax({
            url: "/erp/volunteer/action/permitSchedule",
            method: "POST",
            data: { idx: idx },
            success: function (data) {
                alert("승인되었습니다.");
                window.location.href = "/erp/volunteer/volunteer";
            }
        })
    }

    $(document).on('click', '.permit-button', function (e) {
        var idx = $(this).closest('tr').find('th').html();
        permitSchedule(idx);
    });

    function rejectSchedule(idx) {
        $.ajax({
            url: "/erp/volunteer/action/rejectSchedule",
            method: "POST",
            data: { idx: idx },
            success: function (data) {
                alert("거절되었습니다.");
                window.location.href = "/erp/volunteer/volunteer";
            }
        })
    }

    $(document).on('click', '.reject-button', function (e) {
        var idx = $(this).closest('tr').find('th').html();
        rejectSchedule(idx);
    });
    setScheduleBadge(0) // 스케쥴 배찌 제거
</script>