<div class="modal fade" id="modalSearchSpecies" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">견종을 선택해 주세요</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="clear_result()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="exampleInputID">견종명</label>
                    <div class="input-group mb-3">
                        <input type="hidden" class="form-control" id="species_input" aria-label="검색할 유기견 이름" aria-describedby="basic-addon1">
                        <input type="text" id="autocomplete" class="form-control" placeholder="견종명을 입력해주세요" aria-label="검색할 유기견 이름" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="findButton" onclick="getSpeciesList()">찾기</button>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered" id="table-body">

                </table>
                <input type="text" name="from" style="display:none;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="clear_result()">닫기</button>
                <button type="submit" class="btn btn-primary add_id" onclick="register_species()" data-dismiss="modal">완료</button>
            </div>
        </div>
    </div>
</div>

<script src='/stylesheets/searchShelterModal.css'></script>
<script>
    $('#species_input').keydown(function (e) {
        if (e.keyCode == 13) {
            getSpeciesList();
            return false;
        }
    })


    var global;

    function getSpeciesList() {
        var inputText = document.getElementById("species_input").value;
        $.ajax({
            url: '/data/species_code.json',
            type: 'GET',
            async: false,
            data: {},
            success: function (data) {
                global = data;
                console.log(global);
                $('#table-body').html('');
                $.each(data, function (key, value) {
                    //console.log(data[0])
                    //console.log(value)
                    var text = '<tr class="searchSpecies-list">' +
                        '<th><span class="species_idx" style="display: none;">' + key + '</span>' + value + '</th></tr>';
                    $('#table-body').append(text);
                })
            }
        })
    }
    function register_species() {
        //selected가 없으면 선택하시오 alert
        var selected = $('.searchShelter-selected')[0];
        if (selected === undefined) {
            alert("검색 안했음");
            return;
        }
        //shelterName에 값 추가
        var name = selected.innerText;
        $('#animalSpecies').val(name);
        //modal 초기화
        clear_result();
    }
    function clear_result() {
        setTimeout(1000);
        $('#table-body').html("");
    }
    $(document).on('click', '.searchSpecies-list', function () {
        //console.log(this);
        var selected = $('.searchShelter-selected')[0];

        if (selected !== undefined) {
            $(selected).removeClass('searchShelter-selected');
        }
        if (!$(this).hasClass('searchShelter-selected')) {
            $(this).addClass('searchShelter-selected');
            var tmp = $(this).find('span')[0].innerHTML;
            //console.log(tmp);
            localStorage.setItem('species_idx', tmp); //local storage 에 shelter idx 저장 -> 이걸로 animal search
            //local storage ->
        }
    });
</script>